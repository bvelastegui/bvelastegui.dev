---
// Get the current URL path
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-40 backdrop-blur-lg">
  <div class="container mx-auto flex items-center justify-between px-6 py-4">
    <a href="/" class="text-2xl font-bold flex items-baseline gap-1 select-none text-shadow-lg/30">
      <span class="text-white">Bryan</span><span class="text-accent text-3xl leading-none">.</span>
    </a>
    <nav class="flex items-center gap-8 text-base font-medium">
      <a
        href="/#about"
        class={`relative transition-colors duration-200 text-white hover:text-accent px-1
          ${currentPath === "/" || currentPath === "" ? "after:content-[''] after:block after:h-0.5 after:bg-accent after:w-full after:rounded after:mt-1" : ""}`}
      >
        About
      </a>
      <a
        href="/#experience"
        class={`relative transition-colors duration-200 text-white hover:text-accent px-1
          ${currentPath.startsWith("/#experience") ? "after:content-[''] after:block after:h-0.5 after:bg-accent after:w-full after:rounded after:mt-1" : ""}`}
      >
        Experience
      </a>
      <a
        href="/#contact"
        class={`relative transition-colors duration-200 text-white hover:text-accent px-1
          ${currentPath === "/#contact" ? "after:content-[''] after:block after:h-0.5 after:bg-accent after:w-full after:rounded after:mt-1" : ""}`}
      >
        Contact
      </a>
    </nav>
  </div>
</header>
