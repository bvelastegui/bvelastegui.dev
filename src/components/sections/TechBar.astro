---
// TechBar.astro - Franja de tecnolog√≠as destacadas
const techs = [
  "WEB",
  "PROGRAMMING",
  "DEVELOPMENT",
  "JAVASCRIPT",
  "CSS",
  "FIGMA",
  "GIT",
  "HTML"
];
---

<div class="w-full border-y-2 border-[var(--color-border)] py-3 overflow-x-auto">
  <div class="flex gap-6 justify-center items-center min-w-max px-4 text-[var(--color-text-secondary)] font-semibold tracking-wide text-sm md:text-base uppercase whitespace-nowrap">
    {techs.map((tech, idx) => (
      <>
        <span>{tech}</span>
        {idx < techs.length - 1 && <span class="text-[var(--color-accent)]">/</span>}
      </>
    ))}
  </div>
</div> 