---
import SectionHeader from "../SectionHeader.astro";

import { getCollection } from "astro:content";

const experiences = await getCollection('experiences');

---
<section id="experience" class="py-20 px-4 md:px-12">
  <SectionHeader title="Experience" />
  <div class="max-w-4xl mx-auto">
    <div class="flex flex-col divide-y divide-alt">
      {experiences.map((experience) => (
        <div class="z-10 flex flex-col md:flex-row md:items-start gap-4 py-8 first:pt-0 last:pb-0">
          <div class="md:w-48 flex-shrink-0 mb-2 md:mb-0">
            <span class="block text-sm font-semibold text-accent">
              {experience.data.startDate} - {experience.data.endDate}
            </span>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-accent-blue mb-1">{experience.data.company} <span class="text-alt">|</span> {experience.data.position}</h3>
            <p class="text-white mb-2 whitespace-pre-wrap">{experience.data.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>