---
// Contact.astro - Contact section component
import ContactForm from "../portfolio/ContactForm.astro";
---

<section id="contact" class="bg-[var(--color-background-alt)] py-16">
  <div class="container mx-auto px-4">
    <h2 class="mb-8 text-center text-3xl font-bold text-[var(--color-primary)]">
      Contact Me
    </h2>
    <div
      class="mx-auto max-w-xl rounded-lg border border-[var(--color-border)] bg-[var(--color-background)] p-8 shadow-sm"
    >
      <ContactForm />
    </div>
  </div>
</section>
