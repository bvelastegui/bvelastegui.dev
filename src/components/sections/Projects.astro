---
// Projects.astro - Projects section component
import ProjectCard from "../portfolio/ProjectCard.astro";
---

<section id="projects" class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center text-[var(--color-primary)]">Projects</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {[1, 2, 3].map((projectNumber) => (
        <ProjectCard projectNumber={projectNumber} technologies={["React", "Node.js", "MongoDB"]} />
      ))}
    </div>
  </div>
</section>