---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---
<div class="flex flex-col justify-center items-center mb-20">
  <h2 class="text-4xl md:text-5xl font-bold text-left text-white">
    {title}<span class="text-accent">.</span>
  </h2>
  {description && (
    <p class="mb-8 mt-4 text-center text-muted">
      {description}
    </p>
  )}

</div>