---
// SkillCard.astro - Reusable skill card component
interface Props {
  title: string;
  skills: string;
}

const { title, skills } = Astro.props;
---

<div
  class="rounded-lg border border-[var(--color-border)] bg-[var(--color-background)] p-4 shadow-sm"
>
  <h3 class="font-bold text-[var(--color-primary)]">{title}</h3>
  <p class="text-[var(--color-text-muted)]">{skills}</p>
</div>
