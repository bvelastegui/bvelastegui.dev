---
// ContactForm.astro - Reusable contact form component
---

<form class="space-y-6">
  <div>
    <label for="name" class="mb-2 block text-[var(--color-text)]">Name</label>
    <input
      type="text"
      id="name"
      class="w-full rounded-lg border border-[var(--color-border)] bg-[var(--color-background)] px-4 py-2 text-[var(--color-text)]"
      placeholder="Your name"
    />
  </div>
  <div>
    <label for="email" class="mb-2 block text-[var(--color-text)]">Email</label>
    <input
      type="email"
      id="email"
      class="w-full rounded-lg border border-[var(--color-border)] bg-[var(--color-background)] px-4 py-2 text-[var(--color-text)]"
      placeholder="your.email@example.com"
    />
  </div>
  <div>
    <label for="message" class="mb-2 block text-[var(--color-text)]"
      >Message</label
    >
    <textarea
      id="message"
      rows="4"
      class="w-full rounded-lg border border-[var(--color-border)] bg-[var(--color-background)] px-4 py-2 text-[var(--color-text)]"
      placeholder="Your message here..."></textarea>
  </div>
  <button
    type="submit"
    class="w-full rounded-lg bg-[var(--color-primary)] px-6 py-3 text-white transition-colors hover:bg-[var(--color-primary-dark)]"
  >
    Send Message
  </button>
</form>
